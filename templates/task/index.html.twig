{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
<h1 class="mb-4">Tasks</h1>

<a href="{{ path('app_task_new') }}" class="btn btn-primary mb-3">
    + Create new task
</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Deadline</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for task in tasks %}
        <tr>
            <td>{{ task.id }}</td>
            <td>{{ task.title }}</td>
            <td>{{ task.description }}</td>
            <td>{{ task.status }}</td>
            <td>{{ task.priority }}</td>
            <td>{{ task.deadline ? task.deadline|date('Y-m-d H:i') : '-' }}</td>
            <td class="text-center">
                <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-sm btn-info">Show</a>
                <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-sm btn-warning">Edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7" class="text-center text-muted">
                No tasks found
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
