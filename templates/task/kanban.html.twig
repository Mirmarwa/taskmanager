{% extends 'base.html.twig' %}

{% block title %}Kanban{% endblock %}

{% block body %}
<h1 class="mb-4 text-center">Vue Kanban</h1>

<div class="kanban-board">

    {# TO DO #}
    <div class="kanban-column">
        <h5 class="text-center mb-3">À faire</h5>
        {% for task in todo %}
            <div class="kanban-card">
                <strong>{{ task.title }}</strong>
                <div class="mt-1">
                    <span class="badge 
                        {% if task.priority == 'High' %}bg-danger
                        {% elseif task.priority == 'Medium' %}bg-warning
                        {% else %}bg-success{% endif %}">
                        {{ task.priority }}
                    </span>
                </div>
                <small class="text-muted d-block mt-1">Deadline: {{ task.deadline|date('d M Y') }}</small>
                <small class="text-muted">Assigned: {{ task.assignedTo.username }}</small>
            </div>
        {% else %}
            <p class="text-muted text-center mt-2">Aucune tâche</p>
        {% endfor %}
    </div>

    {# DOING #}
    <div class="kanban-column">
        <h5 class="text-center mb-3">En cours</h5>
        {% for task in doing %}
            <div class="kanban-card">
                <strong>{{ task.title }}</strong>
                <div class="mt-1">
                    <span class="badge 
                        {% if task.priority == 'High' %}bg-danger
                        {% elseif task.priority == 'Medium' %}bg-warning
                        {% else %}bg-success{% endif %}">
                        {{ task.priority }}
                    </span>
                </div>
                <small class="text-muted d-block mt-1">Deadline: {{ task.deadline|date('d M Y') }}</small>
                <small class="text-muted">Assigned: {{ task.assignedTo.username }}</small>
            </div>
        {% else %}
            <p class="text-muted text-center mt-2">Aucune tâche</p>
        {% endfor %}
    </div>

    {# DONE #}
    <div class="kanban-column">
        <h5 class="text-center mb-3">Terminé</h5>
        {% for task in done %}
            <div class="kanban-card">
                <strong>{{ task.title }}</strong>
                <div class="mt-1">
                    <span class="badge 
                        {% if task.priority == 'High' %}bg-danger
                        {% elseif task.priority == 'Medium' %}bg-warning
                        {% else %}bg-success{% endif %}">
                        {{ task.priority }}
                    </span>
                </div>
                <small class="text-muted d-block mt-1">Deadline: {{ task.deadline|date('d M Y') }}</small>
                <small class="text-muted">Assigned: {{ task.assignedTo.username }}</small>
            </div>
        {% else %}
            <p class="text-muted text-center mt-2">Aucune tâche</p>
        {% endfor %}
    </div>

</div>
{% endblock %}

