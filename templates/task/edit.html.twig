{% extends 'base.html.twig' %}

{% block title %}Edit Task{% endblock %}

{% block body %}
<h1 class="mb-4">Edit Task</h1>

<div class="task-form-card p-4 shadow-sm rounded">
    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.priority, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.priority, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.deadline, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.deadline, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="d-flex gap-2 mt-4">
        <button class="btn btn-primary btn-lg">ðŸ’¾ Save Task</button>
        <a href="{{ path('app_task_index') }}" class="btn btn-secondary btn-lg">ðŸ”™ Back to List</a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
