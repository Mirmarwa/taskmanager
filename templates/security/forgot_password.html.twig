{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<h2 class="mb-4">Mot de passe oublié</h2>

{% if emailSent is defined and emailSent %}
    <div class="alert alert-success">
        Si l’adresse email existe, un lien de réinitialisation a été envoyé.
    </div>

    <a href="{{ path('app_login') }}" class="btn btn-primary">
        Retour à la connexion
    </a>
{% else %}
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Adresse email</label>
            <input type="email" name="email" class="form-control" required>
        </div>

        <button class="btn btn-primary">
            Envoyer
        </button>
    </form>
{% endif %}
{% endblock %}
