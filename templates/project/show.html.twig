{% extends 'base.html.twig' %}

{% block title %}Project {{ project.name }}{% endblock %}

{% block body %}
<h1>{{ project.name }}</h1>

<p class="text-muted">{{ project.description }}</p>

<hr>

<h3>Tasks for this project</h3>

<a href="{{ path('app_task_new', { project: project.id }) }}"
   class="btn btn-primary mb-3">
    + Add task to this project
</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for task in tasks %}
        <tr>
            <td>{{ task.title }}</td>
            <td>{{ task.status }}</td>
            <td>{{ task.priority }}</td>
            <td>{{ task.deadline ? task.deadline|date('Y-m-d') : '-' }}</td>
            <td>
                <a href="{{ path('app_task_show', {id: task.id}) }}"
                   class="btn btn-sm btn-info">Show</a>
                <a href="{{ path('app_task_edit', {id: task.id}) }}"
                   class="btn btn-sm btn-warning">Edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5" class="text-center text-muted">
                No tasks for this project
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_project_index') }}" class="btn btn-secondary">
    ‚Üê Back to projects
</a>
{% endblock %}
