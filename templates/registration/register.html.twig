{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 500px;">
    <div class="card auth-card p-4">
        <h2 class="card-title text-center mb-4">Create Account</h2>

        {{ form_start(registrationForm, {'attr': {'class': 'task-form'}}) }}

        <div class="mb-3">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="d-grid mt-4">
            <button class="btn btn-primary btn-lg">Sign Up</button>
        </div>

        {{ form_end(registrationForm) }}

        <div class="mt-3 text-center">
            <a href="{{ path('app_login') }}" class="btn btn-secondary btn-sm">Already have an account? Login</a>
        </div>
    </div>
</div>
{% endblock %}

